<Window x:Class="LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnetodo_luhack"
        mc:Ignorable="d"
        Title="DotNetodo - Login" Height="320" Width="320">
    <Grid Margin="10,10">

        <Grid.RowDefinitions>

            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="75" />

        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" x:Name="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Sign in" Margin="10, 10" />

        <Label Grid.Row="1" Grid.Column="0" x:Name="User" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Username: "/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="username" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
        <Label Grid.Row="2" Grid.Column="0" x:Name="Pass" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Password: "/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>

        <Button Grid.Row="3" Grid.Column="0" x:Name="btnCancel" Margin="10, 5, 10, 20" Click="btnCancel_Click">Cancel</Button>
        <Button Grid.Row="3" Grid.Column="2" x:Name="btnLogin" Margin="10, 5, 10, 20" Click="btnLogin_Click">Login</Button>

    </Grid>
</Window>
